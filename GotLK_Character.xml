<Ui xmlns="http://www.blizzard.com/wow/ui">
    <Script file="GotLK_Character.lua"/>

    <Frame name="GotLK_AvgItemLevelIcon" parent="PaperDollFrame" hidden="false" enableMouse="true" frameStrata="HIGH">
        <Size>
            <AbsDimension x="24" y="24"/>
        </Size>
        <Anchors>
            <Anchor point="TOPLEFT">
                <Offset>
                    <AbsDimension x="70" y="-143"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentTexture" file="Interface\Icons\Inv_helmet_54" setAllPoints="true"/>
            </Layer>
            <Layer level="OVERLAY">
                <FontString name="$parentText" inherits="GameFontHighlightTiny" justifyH="CENTER" justifyV="BOTTOM">
                    <Anchors>
                        <Anchor point="BOTTOM" relativePoint="BOTTOM">
                            <Offset>
                                <AbsDimension x="0" y="1"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>GotLK_UpdateAvgItemLevelDisplay(self);</OnLoad>
            <OnShow>GotLK_UpdateAvgItemLevelDisplay(self);</OnShow>
            <OnEnter>
                GotLK_UpdateAvgItemLevelDisplay(self);
                GotLK_ShowTooltip(self);
            </OnEnter>
            <OnLeave>GameTooltip:Hide();</OnLeave>
        </Scripts>
    </Frame>

